@{
  Layout = "_Layout";
}
@model PierresTreats.Models.Flavor

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Flavor Create</h1>
    @using (Html.BeginForm())
    {
      <div class="form-group">
        <p>Flavor Name</p>
        @Html.TextBoxFor(model => model.FlavorName, new {@class="form-control"})
      </div>
      <button type="submit" class="btn btn-info btn-block"> Add a Book </button>
    }
  </div>
</div>