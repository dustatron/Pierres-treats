@{
  Layout = "_Layout";
}

@using PierresTreats.ViewModels
@model RegisterViewModel
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h2>Register a new user</h2>
    <hr />
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
      <div class="form-group">
        @Html.LabelFor(user => user.Email)
        @Html.TextBoxFor(user=> user.Email, new {@class="form-control"})
      </div>
      <div class="form-group">
        @Html.LabelFor(user=> user.Password)
        @Html.PasswordFor(user=> user.Password, new {@class="form-control"})
      </div>
      <div class="form-group">
        @Html.LabelFor(user=> user.ConfirmPassword)
        @Html.PasswordFor(user=> user.ConfirmPassword, new {@class="form-control"})
      </div>

      <input type="submit" value="Register" class="btn btn-info btn-block"/>
    }
  </div>
</div>