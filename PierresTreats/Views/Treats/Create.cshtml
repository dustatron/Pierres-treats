@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Treat Create</h1>
    @using (Html.BeginForm())
    {
      <div class="form-group">
        <p>Treat Name</p>
        @Html.TextBoxFor(model => model.TreatName, new {@class="form-control"})
      </div>
      <div class="form-group">
        @Html.Label("Select Flavor")
        @Html.DropDownList("FlavorId", null, new { @class="form-control"})
      </div>
      <button type="submit" class="btn btn-info btn-block"> Add a Book </button>
    }
  </div>
</div>